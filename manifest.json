{
    "name": "Imagine Learning Preloaded",
    "short_name": "IL Preloaded",
    "description": "Imagine Learning app with preloaded javascript files",
    "author": "Imagine Learning",
    "version": "1.80.55682",
    "manifest_version": 2,
    "offline_enabled": true,
    "minimum_chrome_version": "33",
    "app": {
        "background": {
            "scripts": ["underscore.js","encoding.js","common.js","mime.js","buffer.js","request.js","stream.js","connection.js","webapp.js","handlers.js","httplib.js","background.js"]
        }
    },
    "storage": {
    "managed_schema": "schema.json"
    },
    "permissions": [
        "webview",
        "alarms",
        "unlimitedStorage",
        "storage",
        "notifications",
        "power",
        "background",
	      "system.network",
	      "audioCapture",
        {"fileSystem":["write","directory","retainEntries"]}
    ],
    "sockets": {
       "udp": {
         "send": [""],
         "bind": [""]
       },
       "tcp": {
         "connect": [""]
       },
       "tcpServer": {
         "listen": ["*:*"]
       }
    },
    "icons": { 
        "128": "images/il_128.png"
    }
}
